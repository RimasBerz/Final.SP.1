<Window x:Class="SystemProgramming1.HookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgramming1"
        mc:Ignorable="d"
        Title="HookWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Vertical">
                <Label Content="Список процессов"/>
                <StackPanel Orientation="vertical">
                    <Button Content="Показать" x:Name="MessageBoxA"
                            Margin="5" Padding="7 2 7 4" Click="MessageBoxA_Click"/>
                    <Button Content="Показать" x:Name="MessageBoxA2"
                            Margin="5" Padding="7 2 7 4" Click="MessageBoxA2_Click"/>
                    <TextBlock x:Name="HookLogs" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
